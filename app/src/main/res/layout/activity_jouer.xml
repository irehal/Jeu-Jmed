<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundH"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jmed_game_background"
    tools:context=".Jouer">

    <LinearLayout
        android:id="@+id/linearLayoutH"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/timerH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:shadowColor="#000fff"
            android:shadowDx="0"
            android:shadowDy="0.0"
            android:shadowRadius="6"
            android:text="99"
            android:textColor="#002eff"
            android:textSize="32dp" />

        <ImageView
            android:id="@+id/imageViewH"
            android:layout_width="150dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/green" />

    </LinearLayout>


    <ImageView
        android:id="@+id/ligneDarriveH"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="77dp" />

    <ImageView
        android:id="@+id/ligneDepartH"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutH"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/joueur0H"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ligneDepartH"
        app:srcCompat="@drawable/joueur" />

    <ImageView
        android:id="@+id/joueurRun0H"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ligneDepartH"
        app:srcCompat="@drawable/runner" />


</androidx.constraintlayout.widget.ConstraintLayout>